
<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>


<h2 align="center">Property: <%= @property.property_name %></h2>

<div class="well col-xs-8 col-xs-offset-2">

	<!- Property Details ->
	<!- **************** ->

	<div class="panel-group" id="accordion">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
	        Property Details</a>
	      </h4>
	    </div>
	    <div id="collapse1" class="panel-collapse collapse in">
	      <div class="panel-body">  
			  <table class="table table-striped">
			    <thead>
			      <tr>
					<th>ID</th>
					<th>Property Name</th>
					<th>Address</th>
					<th>Postcode</th>
					<th>Sector</th>
			      </tr>
			    </thead>
			    <tbody>
					<tr>
						<td><%= @property.id %></td>
						<td><%= @property.property_name %></td>	
						<td><%= @property.address %></td>	
						<td><%= @property.postcode %></td>	
						<td><%= @property.sector.sector_name %></td>	
					</tr>
			    </tbody>
			  </table>
	      </div>
	    </div>
	  </div>
	</div> 

	<!- Scenarios ->
	<!- **************** ->

	<div class="panel-group" id="accordion">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
	        Scenarios</a>
	      </h4>
	    </div>
	    <div id="collapse2" class="panel-collapse collapse in">
	      <div class="panel-body">  
			  <table class="table table-striped">
			    <thead>
			      <tr>
					<th>Scenario Name</th>
					<th>Description</th>
			      </tr>
			    </thead>
			    <tbody>
			    	<% @property.scenarios.each do |s| %>
					<tr>
						<td><%= s.scenario_name %></td>
						<td><%= s.description %></td>	
					</tr>
					<% end %>
			    </tbody>
			  </table>
	      </div>
	    </div>
	  </div>
	</div> 


	<div class="property-actions">
		<%= link_to "Edit this property", edit_property_path(@property), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this property", property_path(@property), method: :delete,
				data: { confirm: "Are you sure you want to delete this property?"},
				class: "btn btn-xs btn-danger" %>
		<%= link_to "View all properties", properties_path, class: "btn btn-xs btn-success" %>
	</div>

</div>
