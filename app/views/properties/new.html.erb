


<div class="container">
	<div class="well well-md">

		
			<div class='coll-offset-1 col-md-11'>
				<h3>Enter details of new property:</h3>
			</div>
		

		<div class='row'>
			<div class='col-xs-12'>
				<%= form_for(@property, :html => {class: "form-horizontal", role: "form"}) do |f| %>
					
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :property_name %>
						</div>
						<div class="col-sm-8">
							<%= f.text_field :property_name, class: "form-control", placeholder: "Name of the property", autofocus: true %>
						</div>
					</div>
					
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :address %>
						</div>
						<div class="col-sm-8">
							<%= f.text_field :address , class: "form-control", placeholder: "Address of the property" %>
						</div>
					</div>
					
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :postcode %>
						</div>
						<div class="col-sm-8">
							<%= f.text_field :postcode , class: "form-control", placeholder: "Postcode of the property" %>
						</div>
					</div>
		
					<div class="form-group">
						<div class="control-label col-sm-2">
							<%= f.label :sector %>
						</div>
						<div class="col-sm-8">
							<%= collection_select(:property, :sector_id, Sector.all, :id, :sector_name, prompt: true) %>
						</div>
					</div>
								
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<%= f.submit class: 'btn btn-primary btn-lg' %>
						</div>
					</div>
				<% end %>
				
				<div class="col-xs-4 col-xs-offset-4">
					[ <%= link_to "Cancel request and return to properties listing", properties_path %> ]
				</div>
			</div>
		</div>
	</div>
</div>