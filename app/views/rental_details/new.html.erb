
<h1>New Scenario</h1>

<%= form_for @rental_detail, url: {action: "create"} do |f| %>
  <div>
	  <%= f.label :number_of_beds %>
	  <%= f.text_field :number_of_beds %>
  </div>
  <div>
  	<%= f.label :weekly_rent %>
  	<%= f.text_area :weekly_rent %>
  </div>
  <div>
  	<%= f.label :term_weeks %>
  	<%= f.text_area :term_weeks %>
  </div>
  <div>
  	<%= f.label :occupancy %>
  	<%= f.text_area :occupancy %>
  </div>
  <div>
  	<%= f.label :scenario %>
  	<%= collection_select(:rental_detail, :scenario_id, Scenario.all, :id, :scenario_name, prompt: true) %>
  </div>  
  <div>
  	<%= f.submit "Create" %>
  </div>
<% end %>